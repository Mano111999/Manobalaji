package com.balaji;

import java.util.Locale;

public class reverse {
    public static void main(String[] args) {
        String str = "good";
        String rev = "";

        int len = str.length();

        for (int i = len-1; i >=0 ; i--) {

            rev = rev+str.charAt(i);

        }
        System.out.println("reverse word :"+rev);

    }
}
